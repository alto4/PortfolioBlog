<%- include('../partials/header') %>
    <h1 class="my-3">Blog Posts</h1>

    <% if(loggedIn) { %>
    <a href="/posts/new" class="btn btn-success">New Article</a>
    
    <% } %>

    <%
      articles.forEach(article => { %>
        <div class="card my-3">
          <div class="card-body">
            <h4 class="card-title"><%- article.title %></h4>  
            <div class="card-subtitle text-muted mb-2">
              <%= article.createdAt.toLocaleDateString() %>  
            </div>  
            <div class="card-text mb-2">
              <%= article.description %>
            </div>
            <a href="posts/<%= article.id %>" class="btn btn-dark">Read More</a>
            <a href="posts/edit/<%= article.id %>" class="btn btn-light">Edit</a>
          
            <form action="/posts/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>  
            </form>
            </div>
        </div>
    <% }); %>
<%- include('../partials/footer') %>